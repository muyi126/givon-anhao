<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dip"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/room_bg"
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:src="@drawable/chat_bg"
        android:scaleType="centerCrop"
        />
    <TextView 
        android:id="@+id/name_cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:text="不做死就不会死"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:textColor="@color/font_white"
        />
    <TextView 
        android:id="@+id/name_en"
        android:layout_below="@+id/name_cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25px"
        android:text="NO DO NO DIE"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:textColor="@color/gray_pressed"
        />
    <TextView 
        android:id="@+id/room_num"
        android:layout_below="@+id/name_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:text="NO.1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:textColor="@color/font_white"
        />
    

</RelativeLayout>
